# Volume OSD
[app-name=volume]
group-by=app-name
format=<b>%s</b> %b
history=0
# If you want it anchored to the bottom center:
anchor=bottom-center
outer-margin=0,0,30,0

# Brightness OSD
[app-name=brightnessctl]
group-by=app-name
format=<b>%s</b> %b
history=0
anchor=bottom-center
outer-margin=0,0,30,0

# Music
[app-name=spotify]
group-by=app-name
format=<b>%s</b>\n%b
history=0
default-timeout=4000
# Set this to a size you like (e.g., 64, 96, 128) to ensure the album art is visible
max-icon-size=64
